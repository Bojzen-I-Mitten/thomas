<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThomasEditor"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:ms="http://namespaces.mindscape.co.nz/wpf" x:Class="ThomasEditor.ThomasGameObjectInspector"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="_this">


    <UserControl.Resources>
        <DataTemplate x:Key="Vector3Editor">
            <StackPanel>
                <Label Content="X"/>
                <TextBox Text="{Binding Path=x, Mode=TwoWay}"/>
                <Label Content="Y"/>
                <TextBox Text="{Binding Path=Value.y}"/>
                <Label Content="Z"/>
                <TextBox Text="{Binding Path=Value.z}"/>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>

        </Grid.RowDefinitions>

        <Grid Grid.Row="0" x:Name="gameObjectPanel">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <CheckBox IsChecked="{Binding activeSelf}" Grid.Column="0"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1"/>
            <xctk:DropDownButton Grid.Column="2"></xctk:DropDownButton>
        </Grid>

        <ms:PropertyGrid x:Name="propertyGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1">
        </ms:PropertyGrid>
    </Grid>



</UserControl>
